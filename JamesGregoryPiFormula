package lab3;

public class JamesGregoryFormula {
	
	static double numerator (double n) {		// to get -1 to the power of n
		int error = 1;
		if(n % 2 == 0) {
			return 1;
		}else if(n % 2 == 1) {
			return -1;
		}else return error;
}
	
	static double denominator(double n) {
		return(2 * n + 1);
}
	
	
	public static void main(String[] args) {
		double result = 0;
		double i = 0;
		while(true) {
			result += (numerator(i)/denominator(i) * 4);  //	multiply by 4 to get pi from pi / 4
			System.out.println(result);
			i++;
		}
	}	
}
	
